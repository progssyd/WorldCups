@model IEnumerable<Stadiums>
@{
}

<div class="container">
	<div class="row">
		<div class="col">
          @foreach(var items in Model)
		  {
			  <div class="card mt-3">
				  <div class="card-body">
					  <div class="row">
						  <div class="col">  
							  <img src="/@items.Images" class="rounded"  width="200" height="200"/>
						  </div>
						  <div class="col">
							  <h5>@items.Name</h5>
							  <ul class="list list-inline">
								  @foreach(var i in items.Facility)
								  {
									  <li class="list-inline-item"><small class="text-muted">@i</small></li>
								  }
							  </ul>
						  </div>
						  <div class="col"></div>
					  </div>
				  </div>
			  </div>
		  }
		</div>
	</div>
</div>
