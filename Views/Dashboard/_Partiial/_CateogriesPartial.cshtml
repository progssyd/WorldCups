@model IEnumerable<Categories>

@{
}
<div class="row mt-5">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <table class="table text-center">
                    <thead>
                        <tt>
                            <td>رقم الفئة</td>
                            <td>اسم الفئة</td>
                            <td>الايقونة</td>
                            <td>الرابط</td>
                            <td>إجراء</td>
                        </tt>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Url</td>
                                <td><button class="btn btn-link" onclick="del(@item.Id)">حذف</button></td>
                                <td><a asp-action="EditCategories" asp-route-id="@item.Id" class="btn btn-link" >تعديل</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>